{
    "app-id": "com.osumffmpeg.osumffmpeg",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "osumffmpeg",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network"
    ],
    "modules": [
        {
            "name": "osumffmpeg",
            "buildsystem": "simple",
            "only-arches": [
                "x86_64"
            ],
            "build-commands": [
                "mkdir -p FlutterApp",
                "tar -xf osumffmpeg-linux-x64-noffmpeg.tar.gz -C FlutterApp",
                "cp -r FlutterApp /app/",
                "chmod +x /app/FlutterApp/osumffmpeg",
                "mkdir -p /app/bin",
                "ln -s /app/FlutterApp/osumffmpeg /app/bin/osumffmpeg",
                "mkdir -p /app/share/metainfo",
                "cp -r osumffmpeg.metainfo.xml /app/share/metainfo/",
                "mkdir -p /app/share/icons/hicolor/scalable/apps",
                "cp -r osumffmpeg.svg /app/share/icons/hicolor/scalable/apps/com.osumffmpeg.osumffmpeg.svg",
                "mkdir -p /app/share/applications",
                "cp -r osumffmpeg.desktop /app/share/applications/",
                "mkdir -p /app/share/appdata",
                "cp -r osumffmpeg.metainfo.xml /app/share/appdata/"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "osumffmpeg.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "osumffmpeg.desktop"
                },
                {
                    "type": "file",
                    "path": "osumffmpeg.svg"
                },
                {
                    "type": "file",
                    "path": "osumffmpeg-linux-x64-noffmpeg.tar.gz"
                }
            ]
        }
    ]
}